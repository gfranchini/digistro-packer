{
  "variables": {
    "username": "root@pam",
    "password": "{{env `PM_PASS`}}"
  },

  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "https://10.0.20.10:8006/api2/json",
      "insecure_skip_tls_verify": true,
      "username": "{{user `username`}}",
      "password": "{{user `password`}}",

      "node": "pve",
      "network_adapters": [
        {
          "bridge": "vmbr0",
          "model": "virtio"
        }
      ],
      "disks": [
        {
          "type": "virtio",
          "disk_size": "10G",
          "storage_pool": "local-Proxmox",
          "storage_pool_type": "lvm"
        }
      ],

      "qemu_agent": true,
      "iso_file": "local:iso/CentOS-7-x86_64-Minimal-2003.iso",
      "http_directory": "config",
      "boot_wait": "2s",
      "cores": "2",
      "memory": "2048",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter>"
      ],

      "ssh_username": "root",
      "ssh_timeout": "30m",
      "ssh_password": "password",

      "unmount_iso": true,
      "template_name": "Centos7PackerTemplate",
      "template_description": "Centos7, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}"
    }
  ]
}
